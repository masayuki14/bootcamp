# vi: set ft=config :
alias ls='ls -G'
alias l.='ls -d .*'
alias ll='ls -l'
alias la='ls -al'
alias grep='grep --color=auto -n --exclude="*~"'
alias vimrm='find . -name \*~ | xargs rm'
alias tailf='tail -f'
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias caskup='for c in `brew cask list`; do ! brew cask info $c | grep -qF "Not installed" || brew cask install --force $c; done'
